{
  "compilerOptions": {
    "target": "es2024",
    "module": "nodenext",
    "outDir": "dist",
    "strict": true,
    "esModuleInterop": true,
    "declaration": true,
    "declarationDir": "dist/@types",
    "typeRoots": ["./src/@types", "./node_modules/@types"],
    "paths": {
      "@/*": ["./*"]
    }
  },
  "include": ["src", "src/@types/*.d.ts"]
}
